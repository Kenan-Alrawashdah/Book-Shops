@model Book 
 
<h1>Add Book</h1>
<hr />

<form asp-action="create" method="post">
    <div class="row">
        <div class="col form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control"/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

    </div>
    <div class="row">
        <div class="col form-group">
            <label asp-for="Authors"></label>
            <input asp-for="Authors" class="form-control"/>
            <span asp-validation-for="Authors" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control"/>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col form-group">
            <label asp-for="Category"></label>
            <select asp-for="Category" asp-items="@Html.GetEnumSelectList<BookCategory>()" class="form-control"></select>
        </div>
        <div class="col form-group">
            <label asp-for="PublishedDate"></label>
            <input asp-for="PublishedDate" class="form-control"/>
        </div>
    </div>
    <div class="row">
        <div class="col form-group">
            <label asp-for="Count"></label>
            <input asp-for="Count" class="form-control" />
            <span asp-validation-for="Count" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control"/>
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
    </div>
    <input type="submit" value="Save" class="btn btn-success"/>
    <a asp-action="Index" class="btn btn-secondary">Caencl</a>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}